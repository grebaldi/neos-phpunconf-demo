# top-most EditorConfig file
root = true
# Unix-style newlines with a newline ending every file and utf8 encoding
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
# JS
[*.{js}]
indent_style = tab
indent_size = 4
# YAML
[*.{yaml,yml}]
indent_style = space
indent_size = 2
# JSON
[*.{json}]
indent_style = space
indent_size = 2
# HTML
[*.{html,htm}]
indent_style = tab
indent_size = 4
# PHP
[*.{php}]
indent_style = space
indent_size = 4
# TypoScript 2
[*.{ts2}]
indent_style = space
indent_size = 4
# CSS
[*.{scss,css}]
indent_style = tab
indent_size = 4
